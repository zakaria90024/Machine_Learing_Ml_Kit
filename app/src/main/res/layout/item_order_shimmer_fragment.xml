<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EDEDED">

            <TextView
                android:id="@+id/order_fragment_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/colorGrey"
                app:layout_constraintBottom_toBottomOf="@+id/order_fragment_date_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_fragment_voucher_no"
                tools:text="Amount" />

            <TextView
                android:id="@+id/order_fragment_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_fragment_division_id"
                tools:text="Data - " />

            <TextView
                android:id="@+id/order_fragment_division_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorGrey"
                app:layout_constraintStart_toStartOf="@+id/order_fragment_area_name"
                app:layout_constraintTop_toBottomOf="@+id/order_fragment_area_name"
                tools:text="Division -" />

            <TextView
                android:id="@+id/order_fragment_area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorGrey"
                app:layout_constraintStart_toStartOf="@+id/order_fragment_ledger_name"
                app:layout_constraintTop_toBottomOf="@+id/order_fragment_ledger_name"
                tools:text="Area Name -" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_fragment_ledger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorGrey"
                app:layout_constraintStart_toStartOf="@+id/order_fragment_voucher_no"
                app:layout_constraintTop_toBottomOf="@+id/order_fragment_voucher_no"
                tools:text="Ledger Name -" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_fragment_voucher_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Voucher No -" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>